# ===========================================
# Towngas Manus - 环境变量配置示例
# ===========================================
# 复制此文件为 .env 并填入实际值
# cp .env.example .env
# ===========================================

# ===========================================
# 应用基础配置
# ===========================================
APP_NAME=Towngas Manus
APP_VERSION=1.0.0

# ===========================================
# 服务配置
# ===========================================
HOST_PORT=8000

# ===========================================
# Anthropic API 配置（必填）
# ===========================================
# 获取 API Key: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-api-key-here

# Claude 模型选择
# 可选值: claude-sonnet-4-5, claude-opus-4-5, claude-haiku-4-5
ANTHROPIC_MODEL=claude-sonnet-4-5

# ===========================================
# 数据库配置（可选）
# ===========================================
# PostgreSQL 连接字符串
# DATABASE_URL=postgresql://user:password@localhost:5432/towngas_manus
DATABASE_URL=

# ===========================================
# Redis 配置（可选）
# ===========================================
# Redis 连接字符串
# REDIS_URL=redis://localhost:6379/0
REDIS_URL=
REDIS_PORT=6379

# ===========================================
# 日志配置
# ===========================================
# 可选值: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================================
# CORS 跨域配置
# ===========================================
# 允许的源地址，多个用逗号分隔
# 生产环境请设置具体域名
CORS_ORIGINS=*

# ===========================================
# 会话配置
# ===========================================
# 会话超时时间（秒）
SESSION_TIMEOUT=3600

# ===========================================
# 上下文压缩配置
# ===========================================
# 触发压缩的消息数量阈值
COMPRESSION_THRESHOLD=50

# ===========================================
# 文件存储配置
# ===========================================
# 文件存储路径
FILES_PATH=./files

# 最大文件大小（MB）
MAX_FILE_SIZE=10

# ===========================================
# TOP 系统集成配置（v0.2+）
# ===========================================
# TOP 系统 API 地址
TOP_API_URL=
TOP_API_KEY=

# ===========================================
# 知识库配置（v0.2+）
# ===========================================
# 向量数据库地址
VECTOR_DB_URL=
KNOWLEDGE_COLLECTION=towngas_knowledge

# ===========================================
# 企业认证配置（v0.3+）
# ===========================================
# 港华统一认证配置
AUTH_PROVIDER=
AUTH_CLIENT_ID=
AUTH_CLIENT_SECRET=
AUTH_REDIRECT_URI=
