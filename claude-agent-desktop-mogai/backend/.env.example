# Towngas Manus Backend 环境变量配置
# 复制此文件为 .env 并填写实际的配置值

# ==================== Anthropic API 配置 ====================
# Anthropic API 密钥（必填）
# 从 https://console.anthropic.com 获取
ANTHROPIC_API_KEY=your_api_key_here

# 默认使用的 Claude 模型
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# 最大生成 token 数
ANTHROPIC_MAX_TOKENS=4096

# API 基础 URL（可选，用于代理或自定义端点）
# ANTHROPIC_BASE_URL=https://api.anthropic.com

# ==================== 应用配置 ====================
# 调试模式（开发时设置为 true）
DEBUG=false

# API 服务主机
API_HOST=0.0.0.0

# API 服务端口
API_PORT=8000

# ==================== 数据存储配置 ====================
# 数据存储目录（相对于 backend/ 目录）
DATA_DIR=data

# 会话过期时间（小时）
SESSION_EXPIRE_HOURS=24

# ==================== 上下文管理配置 ====================
# 上下文最大消息数
CONTEXT_MAX_MESSAGES=50

# 上下文压缩阈值（消息数）
CONTEXT_COMPRESS_THRESHOLD=30

# ==================== CORS 配置 ====================
# CORS 允许的来源列表（逗号分隔）
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000"]

# ==================== TOP 系统集成配置（港华专用） ====================
# TOP 系统 API 基础 URL
# TOP_API_BASE_URL=

# TOP 系统 API 密钥
# TOP_API_KEY=

# ==================== 知识库配置 ====================
# 知识库文件路径
# KNOWLEDGE_BASE_PATH=

# 嵌入模型名称
EMBEDDING_MODEL=text-embedding-3-small
